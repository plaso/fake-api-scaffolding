<h1>Pokemons</h1>

<div class="row row-cols-1 row-cols-md-3 g-4">
  {{#each pokemons as |pokemon|}}
    <div id="pokemon-{{pokemon.id}}" class="col">
      <div class="card text-white bg-dark mb-3" style="max-width: 18rem;">
        <div class="card-header">{{pokemon.type}}</div>
        <div class="card-body">
          <h5 class="card-title">{{pokemon.name}}</h5>
          <a class="btn btn-light" href="/pokemons/{{pokemon.id}}">See more</a>
          <a class="btn btn-light" href="/pokemons/{{pokemon.id}}/edit">edit pokemon</a>
          <form class="d-inline" action="/pokemons/{{pokemon.id}}/delete" method="post">
            <button type="submit" class="btn btn-danger">Delete SSR</a>
          </form>
         

          <button type="button" value="{{pokemon.id}}" class="delete-btn btn btn-danger">
            Delete Pokemon
          </button>
        </div>
      </div>
    </div>
  {{/each}}
</div>

<a class="btn btn-primary" href="/pokemons/new">Create new pokemon</a>

<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="/js/delete.js"></script>