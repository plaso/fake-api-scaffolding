<h1>Courses</h1>

<div class="row row-cols-1 row-cols-md-3 g-4">
  {{#each courses}}
    <div id="course-{{this.id}}" class="col">
      <div class="card text-white bg-dark mb-3" style="max-width: 18rem;">
        <div class="card-header">{{this.type}}</div>
        <div class="card-body">
          <h5 class="card-title">{{this.name}}</h5>
          <a class="btn btn-light" href="/courses/{{this.id}}/detail">See more</a>
          <form class="d-inline" action="/courses/{{this.id}}/delete" method="post">
            <button type="submit" class="btn btn-danger">Delete Course</a>
          </form>
        </div>
      </div>
    </div>
  {{/each}}
</div>

<a class="btn btn-primary" href="/courses/create">Create new course</a>

<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="/js/delete.js"></script>